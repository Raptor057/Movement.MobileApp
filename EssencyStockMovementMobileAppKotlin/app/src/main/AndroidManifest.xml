<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.essency.essencystockmovement">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EssencyStockMovement"
        tools:targetApi="31">

        <!-- Declaración de Change Sender Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.receiving.ReceivingActivity"
            android:exported="true"
            android:label="@string/receiving_section_name"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Change Sender Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.changesenderemail.ChangeSenderEmailActivity"
            android:exported="true"
            android:label="@string/settings_change_sender_email"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Warehouse Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.warehouse.WarehouseActivity"
            android:exported="true"
            android:label="@string/settings_warehouse_label"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Change Lenguage Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.changelanguage.ChangeLanguageActivity"
            android:exported="true"
            android:label="@string/settings_change_language"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Change Regex Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.changeregex.ChangeRegexActivity"
            android:exported="true"
            android:label="@string/settings_change_regex"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Change Email Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.changesendingemail.ChangeSendingEmailActivity"
            android:exported="true"
            android:label="@string/settings_change_sending_email"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Declaración de Users Activity Label -->
        <activity
            android:name=".data.UI.Home.ui.settings.options.users.UsersActivity"
            android:exported="true"
            android:label="@string/settings_users_label"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />


        <!-- Declaración de SettingsActivity -->
        <activity
            android:name=".data.UI.Home.ui.settings.SettingsActivity"
            android:exported="true"
            android:label="SettingsActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name=".data.UI.Home.HomeActivity"
            android:exported="true"
            android:label="@string/home_todo"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name=".data.UI.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.EssencyStockMovement">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>